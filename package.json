{
  "name": "gad-gui-api-demo-v2",
  "version": "2.6.5",
  "description": "Simple application with GUI and API to deploy to Heroku, Glitch, Railway, Vercel etc.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start3001": "set PORT=3001 && node server.js",
    "pretty": "npx prettier --write .",
    "eslint": "npx eslint",
    "start:readonly": "set READ_ONLY=1 && node server.js",
    "format": "npx prettier --write .",
    "lint": "npx eslint . --ext .ts --max-warnings=0",
    "prepare": "husky",
    "test": "npx playwright test",
    "test:headed": "npm run test -- --headed",
    "test:ui": "npm run test -- --ui",
    "show-report": "npx playwright show-report"
  },
  "keywords": [
    "json-server, node, REST API"
  ],
  "author": "jaktestowac.pl",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "connect-pause": "^0.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.4",
    "ejs": "^3.1.8",
    "errorhandler": "^1.2.0",
    "express": "^4.16.2",
    "express-urlrewrite": "^1.2.0",
    "formidable": "^3.5.0",
    "helmet": "^6.0.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.11.2",
    "lodash-id": "^0.14.0",
    "lowdb": "^0.15.0",
    "method-override": "^2.3.10",
    "morgan": "^1.9.0",
    "nanoid": "^1.0.1",
    "pluralize": "^7.0.0",
    "prettier": "3.3.2",
    "seedrandom": "^3.0.5"
  },
  "engines": {
    "node": ">=16.x"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.14.5",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-prettier": "^5.1.3"
  }
}
